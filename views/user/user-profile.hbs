<link rel="stylesheet" href="stylesheets/profile.css" />

<nav>
	<img src="/images/logo.png" alt="Vitality logo" class="logo" />

	<div class="menu-container">
		<div class="logo-container">
			<img src="images/menu.svg" alt="Menu icon" class="hb" />
			<img src="images/close.svg" alt="Clost icon" class="close" />
		</div>
		<ul class="list-items">
			<li><a href="/">Home</a></li>
			<li><a href="/logout">Logout</a></li>
		</ul>
	</div>
</nav>

<div class="content">
	<h3><span>Allowable Calories:</span> {{user.caloriesNeeded}} cals</h3>
	{{#if day}}
		<h3><span>Calories Remaining:</span> {{day.daysCalories}} cals</h3>
	{{/if}}
	<form action="/search" method="GET">

		<input type="text" name="ingr" id="search-item" />
		<button type="submit">Search</button>

	</form>

</div>

<div class="foods">
	<h3>Foods Logged:</h3>
	{{#if day}}
		{{#each day.foodArray}}
			<form action="/delete" method="POST">
				<p>{{this.foodName}}</p>
				<p>{{this.calories}}</p>
				<button type="submit">Delete</button>
			</form>
		{{/each}}
	{{/if}}

</div>

{{! <input type="text" name="food" id="food" />
<button id="search-food">submit</button> }}

<div>
	<p class="name"></p>
	<p class="category"></p>
</div>